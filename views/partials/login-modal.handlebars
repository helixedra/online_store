<!-- LOGIN MODAL -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered login-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <ul class="nav nav-tabs flex-grow-1" id="myTab" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#login" role="tab"
                            aria-controls="login" aria-selected="true">Вход</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#registration" role="tab"
                            aria-controls="registration" aria-selected="false">Регистрация</a>
                    </li>
                </ul>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i class="far fa-times"></i></span>
                </button>
            </div>
            <div class="modal-body">
                <!-- -->
                <div class="tab-content" id="myTabContent">
                    <div class="tab-pane fade show active" id="login" role="tabpanel" aria-labelledby="login-tab">
                        <!--ALERT-->
                        <div class="alert alert-danger" role="alert" style="display:none;" id="loginError">
                            <div class="login-msg"></div>
                        </div>
                        <!--ALERT-->
                        <form action="/user/login" method="post" id="loginForm" name="loginForm">
                            <div class="input-group">
                                <label for="email">Электронная почта</label>
                                <input type="text" name="email" placeholder="Электронная почта" id="loginEmail">
                            </div>
                            <div class="input-group">
                                <label for="password">Пароль</label>
                                <input type="password" name="password" placeholder="Пароль" id="loginPassword"
                                    data-eye="loginpass">
                                <div class="pass-eye" data-eye="loginpass"><i class="far fa-eye-slash"></i></div>
                            </div>
                            <div class="input-group d-flex justify-content-between">
                                {{!-- <div class="d-flex order-0">
                                    <input type="checkbox" name="remember" id="">
                                    <div class="font-small" style="margin-left:.5rem;">Запомнить меня</div>
                                </div> --}}
                                <div class="order-1">
                                    <a href='#' class="font-small">Напомнить пароль</a>
                                </div>
                                <div>
                                </div>
                            </div>
                            <div class="input-group">
                                <button type="submit" class="reset-btn primary-btn btn-100" id="loginSubmit"
                                    name="loginSubmit">Войти</button>
                            </div>
                        </form>
                    </div>
                    <div class="tab-pane fade" id="registration" role="tabpanel" aria-labelledby="registration-tab">
                        <!--ALERT-->
                        <div class="alert alert-danger" role="alert" style="display:none;" id="registrationError">
                            <div class="registration-msg"></div>
                        </div>
                        <!--ALERT-->
                        <form action="/user/registration" method="post" id="registrationForm" name="registrationForm">
                            <div class="input-group">
                                <label for="name">Имя</label>
                                <input type="text" name="name" placeholder="Имя" id="regName">
                            </div>
                            <div class="input-group">
                                <label for="phone">Номер телефона</label>
                                <input type="text" name="phone" placeholder="Номер телефона" id="regPhone">
                            </div>
                            <div class="input-group">
                                <label for="email">Электронная почта</label>
                                <input type="text" name="email" placeholder="Электронная почта" id="regEmail">
                            </div>
                            <div class="input-group">
                                <label for="password">Пароль</label>
                                <div class="pass-eye" data-eye="registrationpass"><i class="far fa-eye-slash"></i></div>
                                <input type="password" name="password" placeholder="Пароль" id="regPassword"
                                    data-eye="registrationpass">
                            </div>
                            <div class="input-group"></div>
                            <div class="input-group">
                                <button id="regSubmit" name="regSubmit" type="submit"
                                    class="reset-btn primary-btn btn-100">Зарегистрироваться</button>
                            </div>
                        </form>
                    </div>
                </div>
                <!-- -->
            </div>
        </div>
    </div>
</div>
<!-- / LOGIN MODAL -->